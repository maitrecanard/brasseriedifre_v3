{% extends 'back/back_base.html.twig' %}

{% block title %}Produit {{ product.name }}{% endblock %}

{% block body %}
    <h1 class="h3 mb-0 text-gray-800">Produit {{ product.name }}</h1>
    </div>
    <div style="display:flex;justify-content:space-between;">
  <a class="btn btn-light" href="{{ path('app_back_products_index') }}">Retour à la liste</a>
 
    <a class="btn btn-outline-secondary" href="{{ path('app_back_products_edit', {'id': product.id}) }}">Modifier</a>
    </div>
        <div class="card shadow mb-4">
   <div class="card-body">
    <h3>Information général</h3>
    <table class="table">
        <tbody>
            <tr>
                <th>Référence produit</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Sous titre</th>
                <td>{{ product.subtitle }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('assets/content/picture')}}{{ product.image }}"></td>
            </tr>
            <tr>
                <th>Alcool</th>
                <td>{{ product.degre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ product.content }}</td>
            </tr>
                             </tbody>
                </table>
                   
            <tr>
                <th>Quantité / Prix</th>
                <td style="display:flex;"> 
                   <table>
                    <thead>
                        <tr>
                            <th>Quantité</th>
                            <th>Prix</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div style="display:flex;flex-direction:column;">
                                {% for quantity in quantities %}
                                    {{ quantity.quantity }} cl
                                {% endfor %}
                                </div>
                            </td>
                            <td>
                                {% for price in prices %}
                                    {{ price.prix }} €
                                {% endfor %}
                            </td>
                        </tr>
                    </tbody>
                </table>
                   
                </td>
            </tr>
            <tr>
                <th>Publié</th>
                <td>{{ product.active ? '<span class="text-success">Oui</span>' : '<span class="text-danger">Non</span>' }}</td>
            </tr>
        </tbody>
    </table>
</div>
</div>
<h2 class="h3 mb-0 text-gray-800">Historique des modifications de l'article</h2>
<div class="card shadow mb-4">

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Action</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                       
                                    <tbody>
                                    {% for historic in historical %}
                                     <tr>
                                            <td>{{ historic.user.firstname }} {{ historic.user.lastname }}</td>
                                            <td>{{ historic.name }}</td>
                                            <td>{{ historic.createdAt ? historic.createdAt|date('d/m/Y H:i:s') : ''}}</td>
    
                                        </tr>
                                        {% endfor %}
                                    </tbody>                                </table>
                            </div>
                        </div>
                    </div>        

{% endblock %}
