{% extends 'back/back_base.html.twig' %}

{% block title %}Mail{% endblock %}

{% block body %}
    <h1>Mail</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mail.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mail.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ mail.address }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ mail.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ mail.createdAt ? mail.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ mail.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_mail_index') }}">back to list</a>

    <a href="{{ path('app_back_mail_edit', {'id': mail.id}) }}">edit</a>

    {{ include('back/mail/_delete_form.html.twig') }}
{% endblock %}
