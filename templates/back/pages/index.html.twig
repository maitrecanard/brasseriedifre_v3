{% extends 'back/back_base.html.twig' %}

{% block title %}Pages index{% endblock %}

{% block body %}
    <h1 class="h3 mb-0 text-gray-800">Pages index</h1>
   </div>
   {% if is_granted('ROLE_SUPADMIN') %}
        <a href="{{ path('app_back_pages_new') }}" class="btn btn-success btn-icon-split mb-4">
            <span class="icon text-white-50">
                <i class="fas fa-check"></i>
            </span>
            <span class="text">Nouvelle page</span>
        </a>
    {% endif %}
     <div class="card shadow mb-4">
                   
        <div class="card-body">
    <table class="table">
        <thead>
            <tr>
                <th>Référence page</th>
                <th>Titre</th>
                <th>Content</th>
                <th>Mise à jour le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>{{ page.content }}</td>
                <td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_back_pages_show', {'id': page.id}) }}">show</a>
                    <a href="{{ path('app_back_pages_edit', {'id': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune page actuellement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}
