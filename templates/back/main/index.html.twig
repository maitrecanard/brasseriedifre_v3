{% extends 'back/back_base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<div class="container text-center" >
  <div class="row row-cols-3">
    <div class="card mb-4 py-3 border-left-primary"><a href="{{ path('app_back_visitor') }}">{{ countVisitor }} visiteurs ce jour</A></div>
    <div class="card mb-4 py-3 border-left-success">
      {% if bestProduct == NULL %}
        Aucun clique enregistré
      {% else %}
        {{ bestProduct.image }} Produit le plus visité
      {% endif %}
    </div>
    <div class="card mb-4 py-3 border-left-info">
    {% if products == NULL %}
        Aucun produit enregistré
    {% else %}
      <a href="{{ path('app_back_products_index') }}">{{ activProducts }} produits publié / {{inactivProducts}} produits non publié</a>
    {% endif %}
    </div>
    <div class="col">point de vente</div>
    <div class="col">Message</div>
    <div class="col">Mise à jour</div>
  </div>
</div>
{% endblock %}
